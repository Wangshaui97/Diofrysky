<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@mipmap/home_mine_background"
    tools:context=".view.homefragment.HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_150"
        android:background="@drawable/mine_home_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_250"
            android:layout_marginTop="@dimen/dp_30"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/my_icon_information"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:drawableLeft="@mipmap/my_icon_information"
                android:text="个人资料"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/dp_30"
                android:textSize="@dimen/sp_18"
                />
            <TextView
                android:id="@+id/my_icon_circle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:drawableLeft="@mipmap/my_icon_circle"
                android:text="我的圈子"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/dp_30"
                android:textSize="@dimen/sp_18"
                />
            <TextView
                android:id="@+id/my_icon_foot"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:drawableLeft="@mipmap/my_icon_foot"
                android:text="我的足迹"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/dp_38"
                android:textSize="@dimen/sp_18"
                />

            <TextView
                android:id="@+id/my_icon_wallet"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:drawableLeft="@mipmap/my_icon_wallet"
                android:text="我的钱包"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/dp_30"
                android:textSize="@dimen/sp_18"
                />

            <TextView
                android:id="@+id/my_icon_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:drawableLeft="@mipmap/my_icon_address"
                android:text="我的收货地址"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/dp_30"
                android:textSize="@dimen/sp_18"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_130"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_100"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/home_mine_userhandimg"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            app:placeholderImage="@mipmap/home_mine_background"
            app:roundAsCircle="true"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/home_mine_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="111"
            android:textSize="@dimen/sp_15"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#000"
            />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>