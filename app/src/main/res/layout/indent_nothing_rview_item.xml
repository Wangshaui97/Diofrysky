<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardElevation="@dimen/dp_8"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/dp_8"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/nothing_item_orderId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="订单号    "
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/nothing_item_rview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nothing_item_orderId"
                >
            </android.support.v7.widget.RecyclerView>

            <Button
                android:id="@+id/nothing_item_pay"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentRight="true"
                android:layout_below="@id/nothing_item_rview"
                android:text="确认收货"
                android:textColor="#fff"
                android:textSize="@dimen/sp_20"
                android:background="@drawable/shopcar_btn_pay"
                />

            <TextView
                android:id="@+id/nothing_item_del"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@id/nothing_item_rview"
                android:text="派件公司   圆通快递 "
                android:textColor="#000000"
                android:textSize="@dimen/sp_14"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>