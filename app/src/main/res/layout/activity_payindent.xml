<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/rr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:background="@drawable/shopcar_bottom_card"
        android:layout_margin="@dimen/dp_10"
        >
        <TextView
            android:id="@+id/payindent_adress_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李小二"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            />
        <TextView
            android:id="@+id/payindent_adress_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18811795066"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"

            />
        <TextView
            android:id="@+id/payindent_adress_adress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="广东省 深圳市 福田区 黄冈街道办事处 黄冈商务中心楼55层"
            android:layout_below="@id/payindent_adress_name"
            android:layout_marginTop="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/payindent_adress_rview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/shopcar_bottom_card"
        android:layout_below="@id/rr"
        >
    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/payindent_adress_pay"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/shopcar_btn_pay"
        android:text="支付"
        android:textSize="@dimen/sp_18"
        android:textColor="#fff"
        />

</RelativeLayout>