<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login"
    android:orientation="vertical"
    tools:context=".view.MainActivity">

    <EditText
        android:id="@+id/login_putin_name"
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_60"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_160"
        android:background="@null"
        android:drawableLeft="@mipmap/login_phone"
        android:drawablePadding="@dimen/dp_30"
        android:hint="手机号"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="25sp" />

    <TextView
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_1"
        android:layout_gravity="center"
        android:background="#fff" />

    <LinearLayout
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_60"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/login_putin_pwd"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_60"
            android:background="@null"
            android:drawableLeft="@mipmap/login_suo"
            android:drawablePadding="@dimen/dp_30"
            android:hint="登录密码"
            android:inputType="textPassword"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/login_putin_pwd_hind"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:padding="30dp"
            android:src="@mipmap/login_eye" />
    </LinearLayout>

    <TextView
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_1"
        android:layout_gravity="center"
        android:background="#fff" />

    <LinearLayout
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_50"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/login_putin_rember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="记住密码"
            android:textColor="#fff"
            android:textSize="@dimen/sp_10"
            android:theme="@style/My_CheckBox" />

        <TextView
            android:id="@+id/login_putin_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="快速注册"
            android:textColor="#fff"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>

    <Button
        android:id="@+id/login_putin_success"
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_35"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_130"
        android:background="@drawable/login_button_shap"
        android:text="登录"
        android:textColor="#FFFF5B2A"
        android:textSize="@dimen/dp_17" />
</LinearLayout>